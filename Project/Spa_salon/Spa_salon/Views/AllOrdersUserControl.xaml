<UserControl x:Class="Spa_salon.Views.AllOrdersUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Spa_salon.Views"
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="700">
    <Grid>
        <StackPanel>
            <Border Padding="0,10,0,10">
                <GroupBox Header="Пошук" Margin="9,0,10,0">
                    <Border Padding="5">
                        <StackPanel>
                            <WrapPanel>
                                <TextBox FontSize="15" VerticalContentAlignment="Center" Height="35" Width="350"></TextBox>
                                <Button Margin="10,0,0,0" Width="100" Content="Знайти" />
                                <Label Margin="20,5,5,0" Content="Фільтр:" />
                                <ComboBox Width="148"/>
                            </WrapPanel>
                        </StackPanel>
                    </Border>
                </GroupBox>
            </Border>
            <Border VerticalAlignment="Top" Height="545" Padding="10">
                <DataGrid></DataGrid>
            </Border>
        </StackPanel>
    </Grid>
</UserControl>
